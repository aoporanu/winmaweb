{% extends app.ajax ? "layouts/ajax.twig" :  "layouts/layout.twig" %}

{% import "/forms/forms.twig" as forms %}

{% block content %}
{% if form.errors %}
	<div class="error_box"><strong>There were errors - please verify all fields for errors</strong>
		{% if err_img %}<br />{{err_img}}{% endif %}
	</div>
{% endif %}
{% if form.success %}
	<div class="infotip"><strong>Success</strong><br /><br />Product added successfully<br /><a class="modal-close" href="#">Close</a></div>
{% else %}
<form enctype="multipart/form-data" action="{{router.url_for('@myNetwork?ac=add')}}" method="post" name="myForm">
	<div class="form-global clearfix">
		<div class="clearfix">
			<div class=" label label_big"><label for="name">Title:</label></div>
			<div class="input">
				{{ forms.input('title', form.values.title) }}
				{{ forms.errors(form.errors.title) }}
			</div>
		</div>
    <div class="clearfix">
			<div class=" label label_big"><label for="name">File:</label></div>
			<div class="input">
				<input name="file" type="file" id="file" />
				{{ forms.errors(form.errors.file) }}
			</div>
		</div>
        <div class="form-global clearfix">
            <div class=" label label_big"><label>&nbsp;</label></div>
            <div class="left"><input type="submit" class="g-button g-button-submit" value="Add" /></div>
        </div>
    </div>
</form>
{% endif %}
{% endblock content %}