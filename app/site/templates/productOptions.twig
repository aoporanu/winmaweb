{% extends app.ajax ? "layouts/ajax.twig" :  "layouts/layout.twig" %}

{% block content_page %}

<ul>
    {% for option in options %}
        <li style="padding:10px;border-bottom:1px solid #cacaca">
            <div class="yui3-g">
							<div class="yui3-u-2-3" style="width: 420px;">
                    <div style="font-size: 16px;font-weight: bold">{{option.name}}</div>
                    <div style="font-size:11px;">
                        Value: S${{option.suplier_price}} -
                        Discount: {{option.discount}}% -
                        Save: S${{option.money_save}} -
                        <strong>Price: S${{option.price}}</strong>
                    </div>
                    <div style="font-size:10px;">
                        Expires At: {{option.expire_at}}
                    </div>
                </div>
                <div class="yui3-u-1-3" style="width: 240px;">
									<div style="padding-top: 17px;">{{option.sold}} Bought ({{option.stock-option.sold}} Available) | <a style="float: right; margin-top: -7px; padding-left: 3px;" class="g-button g-button-share" href="{{router.url_for('@paymentShopCart?ac=add&product_id='~option.product_id~'&option_id='~option.id~'&friend='~friend)}}">Continue</a></div>
									<div class="clear"></div>
                </div>
            </div>
        </li>
    {% endfor %}
</ul>
{% endblock content_page %}