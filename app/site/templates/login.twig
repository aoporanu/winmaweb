{% extends app.ajax ? "layouts/ajax.twig" :  "layouts/layout_default.twig" %}
{% import "/forms/forms.twig" as forms %}

{% block content_page %}
{% if app.ajaxRedirectUrl %}
<div class="inv ajax-redirect">{{app.ajaxRedirectUrl}}</div>
{% endif %}
<form name="frmLogin" enctype="application/x-www-form-urlencoded" action="/login" method="post">
    <div class="form-global form-reg clearfix">
        <div class="clearfix">
        <div class="label"><label for="login_username">Username:</label></div>
        <div class="input">
            {{ forms.input('login_username', form.values.login_username) }}
            {{ forms.errors(form.errors.login_username) }}
        </div>
        </div>
        <div class="clearfix">
        <div class="label"><label for="login_password">Password:</label></div>
        <div class="input">
            {{ forms.input('login_password', '', 'password') }}
            {{ forms.errors(form.errors.login_password) }}
        </div>
        </div>
    </div>
    <div class="{% if app.ajax %}modal-bottom2{% endif %}" style="{% if app.ajax %}background:#DCDCDC;margin-bottom:-10px;text-align:left{% endif %}">
        <div class="clearfix">
					<div class="left" style="{% if not app.ajax %}margin-left:10px{% endif %}">
						<div class="small-button" style="float: none;">
							<a href="" {% if app.ajax %}{% else %}onclick="document.forms['frmLogin'].submit(); return false;"{% endif %} class="{% if app.ajax %}modal-submit{% endif %}">
								<div class="button_see">
									<div class="small-left"></div>
									<div class="small-center">Login</div>
									<div class="small-right"></div>
								</div>
							</a>
						</div>
						<input type="submit" name="update" value=" Apply " style="position: absolute; height: 0px; width: 0px; border: none; padding: 0px;" hidefocus="true" tabindex="-1"/>
						<div class="clear"></div>
					</div>
					<div class="right">
						<div class="small-button" style="float: none;">
							<a href="/forgot-password">
								<div class="button_see forgot_pass">Forgot password</div>
							</a>
						</div>
						<div class="clear"></div>
					</div>
					<div class="clear"></div>
        </div>
    </div>
</form>
{% endblock content_page %}