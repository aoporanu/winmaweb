{% extends app.ajax ? "layouts/ajax.twig" :  "layouts/layout.twig" %}
{% import "/forms/forms.twig" as forms %}

{% block css %}
    {% if not app.ajax %}
        {% include "myaccount/css.twig" %}
    {% endif %}
{% endblock css %}
{% block js %}
    {% if not app.ajax %}
        {% include "myaccount/js.twig" %}
    {% endif %}
{% endblock js %}

{% block content_page %}
    <h1>Change Password</h1>
    <div class="ma_top"></div>
    <div class="ma_content">
        {% if form.errors %}
            <br /><div class="error_box"><strong>There were errors - please verify all fields for errors</strong></div>
        {% endif %}
        {% if form.success %}
            <div class="infotip" style="margin: 0px;"><strong>Success</strong><br /><br />Your password has been changed.
						&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
						<a class="g-button g-button-submit ajax-link" href="/my-account">Exit To Overview</a></div>
				{% else %}
        <form enctype="application/x-www-form-urlencoded" action="/my-account/change-password" method="post">
            <div class="form-global clearfix">
                <div class="label_big"><label for="c_pass">Current password:</label></div>
                <div class="input">
                    {{ forms.input('c_pass', '', 'password') }}
                    {{ forms.errors(form.errors.c_pass) }}
                </div>
                <div class="label_big"><label for="new_pass">New password:</label></div>
                <div class="input">
                    {{ forms.input('new_pass', '', 'password') }}
                    {{ forms.errors(form.errors.new_pass) }}
                </div>
                <div class="label_big"><label for="renew_pass">Retype new password:</label></div>
                <div class="input">
                    {{ forms.input('renew_pass', '', 'password') }}
                    {{ forms.errors(form.errors.renew_pass) }}
                </div>
                <div class="label_big"><label>&nbsp;</label></div>
                <div class="left"><input type="submit" class="g-button g-button-submit ajax-submit" value="Change" /></div>
            </div>
        </form>
				{% endif %}
    </div>
    <div class="ma_bottom"></div>
{% endblock content_page %}

{% block right_side %}
    {% if not app.ajax %}
        {% set ma_menu = 'chpass' %}
        {% include "myaccount/menu.twig" %}
    {% endif %}
{% endblock right_side %}